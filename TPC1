# -*- coding: utf-8 -*-
"""
JOGO DOS 21FOSFOROS
"""
def memor(jogada,memoria,b):
    if jogada==1:
        if b==1:
            if memoria%2==0:
                print("Voce ganhou")
                comecar()
            else:
                print("Ganhou o computador")
                comecar()
        else:
            if memoria%2==0:
                print("Ganhou o computador")
                comecar()
            else:
                print("Voce ganhou")
                comecar()
            
def jogo(jogada,rodada,memoria,b):               
    memoria=int(input("Qual a sua jogada?"))
    if memoria>5 or memoria<1:#so permite jogadas ate 5
        print("Escolha um numero entre 1 e 5")
        jogo(jogada,rodada,memoria,b)
    else:
        jogada=jogada-memoria
        print(jogada)
        rodada=rodada+1
        memor(jogada,memoria,b)
        print("vez do computador")
        tirar=5-memoria
        if tirar==0:
            tirar=1
        jogada=jogada-tirar
        rodada=rodada+1
        print(jogada)
        memor(jogada,memoria,b)
        jogo(jogada,rodada,memoria,b)
        
def iniciojogo(b):
    if b==2:#o computador é o 1
        print("21")
        print("Vez do computador")
        jogada=16
        print(jogada)
        rodada=2
        memoria=5
        jogo(jogada,rodada,memoria,b)
    elif b==1:#o computador é 0 2
        print("21")
        rodada=1
        memoria=0
        jogada=21
        jogo(jogada,rodada,memoria,b)
        
def comecar():
    a=input("Escreva play para iniciar o jogo:")
    if a=="play":
        b=int(input("Escolha qual o seu jogador(1 pu 2):"))
        if b!=1 and b!=2:
            print("Errooooo")
            comecar()
        else:
            iniciojogo(b)
    else:
        print("Errooooo")
        comecar()
               
comecar()            
